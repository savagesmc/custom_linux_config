filetype indent on

function! FindFilesToLocationList(the_arg)
   let the_com = "find . -name '" . a:the_arg . "' -exec awk '$1 != \"\" && n < 1 {print FILENAME\":1:1:\"$0; n++}' {} \\;"
   lgetexpr system(the_com)
   let w:quickfix_title = the_com
endfunction

