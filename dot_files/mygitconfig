[user]
	name = Stephen M. Clark
	email = stephen.m.clark@collins.com
[credential]
	helper = store --file ~/.git/.credentials
[difftool]
    prompt = true
[diff]
    tool = nvimdiff
[merge]
	tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[alias]
   pl = log --graph --format=oneline --abbrev-commit --decorate --all
[push]
	default = simple
[diff "zip"]
	textconv = unzip -c -a
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
